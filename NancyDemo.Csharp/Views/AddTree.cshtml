@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<NancyDemo.Csharp.Model.TreeModel>
@{
    ViewBag.Title = "Add tree page";
    Layout = "Master.cshtml";
}

@section trees

<h1>Welcome to the add tree page</h1>
<form action="/trees/add/" method="post">
    <table>
        <tr>
            <td>Id</td>
            <td>
                <input type="text" name="Id" value="@Model.Id" /></td>
        </tr>
        <tr>
            <td>Genus</td>
            <td>
                <input type="text" name="Genus" value="@Model.Genus" /></td>
        </tr>
    </table>
    <input type="submit" value="Add new" />
</form>
